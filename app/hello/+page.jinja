{% extends "base.jinja" %}

{% block content %}
<script>
    const generateGreetingUrl = () => {
        const input = document.querySelector("#name");
        const name = input.value;
        const url = `/hello/${encodeURIComponent(name)}`;
        input.value = ""; // Clear the input field

        urlAnchor = document.querySelector("#url");
        urlAnchor.href = url;
        urlAnchor.textContent = url;
    }
</script>

<main class="container">
    <article class="content">
        <h1>Want to get greeted?</h1>
        <fieldset id="fieldset" role="group">
            <input id="name" type="text" placeholder="your name" />
            <input type="button" onclick="generateGreetingUrl()" value="Make URL" />
        </fieldset>
        <br>
        <a id="url" href=""></a>
    </article>
</main>

<style>
    main.container {
        margin-top: 6rem;
        padding: 1rem;
        text-align: center;
    }

    article.content {
        width: 32rem;
        margin: 0 auto;
        padding: 1rem;
        border-radius: 1.5rem;
    }

    fieldset#fieldset {
        margin-top: 2rem;
    }

    a#url {
        font-size: 1.8rem;
        text-align: center;
    }
</style>
{% endblock content %}